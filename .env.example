# AI Tudor Environment Variables

# Production Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# OpenAI API (for future LLM integration)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# Database (for future persistence)
DATABASE_URL=file:./packages/core/prisma/dev.db
DATABASE_PROVIDER=sqlite

# Analytics (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# Error Tracking (optional)
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# Performance Monitoring (optional)
NEXT_PUBLIC_LIGHTHOUSE_CI_TOKEN=your_lighthouse_token

# Development Override
# NODE_ENV=development
# NEXT_PUBLIC_APP_URL=http://localhost:3000
